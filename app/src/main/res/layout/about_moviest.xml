<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    tools:showIn="@layout/activity_about2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <io.plaidapp.ui.widget.CutoutTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/about_header_height"
            android:text="Moviest"
            app:foregroundColor="@color/background_splash_title"
            app:font="roboto-mono-regular"
            android:layout_weight="0.5"/>

        <io.plaidapp.ui.widget.BaselineGridTextView
            android:id="@+id/about_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:paddingStart="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:paddingEnd="@dimen/padding_normal"
            android:paddingBottom="@dimen/spacing_large"
            android:background="@color/background_light"
            android:textColorLink="@color/moviest_links"
            android:textColorHighlight="@color/moviest_links_highlight"
            style="@style/Widget.Plaid.About" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light">

            <TextView
                android:id="@+id/about_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_light"
                android:textAlignment="center"
                android:paddingBottom="@dimen/spacing_large"
                style="@style/Widget.Plaid.About" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                android:src="@drawable/tmdb"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
